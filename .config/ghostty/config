# FONTS
font-family = "TX-02"
font-size = 18

# theme = HaX0R_GR33N
theme = cyberdream
background-opacity = 0.5
window-padding-x = 10
window-padding-y = 10
split-divider-color = #5eff6c
window-inherit-font-size = true
cursor-style = block
cursor-text= #000000

# KEYBINDS
keybind = f5=reload_config
keybind = f4=open_config
keybind = ctrl+shift+q=quit
keybind = shift+up=scroll_page_lines:-5
keybind = shift+down=scroll_page_lines:5
# tabs
keybind = ctrl+shift+w=close_surface
keybind = ctrl+shift+n=new_tab
keybind = ctrl+shift+left_bracket=next_tab

# splits
keybind = ctrl+shift+d=new_split:right
keybind = ctrl+alt+d=new_split:down
keybind = ctrl+shift+right_bracket=goto_split:next

keybind = ctrl+alt+right=goto_split:right
keybind = ctrl+alt+down=goto_split:bottom
keybind = ctrl+alt+left=goto_split:left
keybind = ctrl+alt+up=goto_split:top

keybind = ctrl+shift+left=resize_split:left,10
keybind = ctrl+shift+right=resize_split:right,10
keybind = ctrl+shift+up=resize_split:up,10
keybind = ctrl+shift+down=resize_split:down,10

keybind= global:ctrl+shift+k=toggle_quick_terminal


# MISC
link-url = true
confirm-close-surface = false
mouse-hide-while-typing = true
shell-integration = zsh
shell-integration-features = sudo, no-cursor, no-title
